{
    "name": "@amjs/js-utils",
    "version": "0.2.0",
    "description": "Set of JS tools.",
    "keywords": [
        "javascript",
        "tools"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "ulr": "git@github.com:Wolfchamane/amjs-js-utils.git"
    },
    "author": "Arturo Martínez Díaz <arturo.martinez@amartinez.dev>",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@types/jest": "^29.5.14",
        "eslint": "^9.21.0",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^3.5.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typedoc": "^0.27.9",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.26.0"
    },
    "scripts": {
        "build": "tsc",
        "build:doc": "typedoc --tsconfig tsconfig.json --options typedoc.config.js",
        "format": "prettier --config .prettierrc .",
        "format:fix": "prettier --config .prettierrc --write .",
        "lint": "eslint --config eslint.config.js src/**/*.ts ",
        "lint:fix": "eslint --fix --config eslint.config.js src/**/*.ts",
        "test": "jest --config jest.config.ts",
        "test:coverage": "jest --config jest.config.ts --coverage",
        "type:check": "tsc --noEmit"
    }
}
