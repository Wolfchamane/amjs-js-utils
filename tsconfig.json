{
    "compilerOptions": {
        "module": "nodenext",
        "target": "es2024",
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "nodenext",
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/coverage"]
}
